<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            style="@style/ButonClose"
            android:id="@+id/btnActionExit"
            android:text="Abandonar Grupo"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_width="200dp"
            app:icon="@drawable/ic_close"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/student"
        android:id="@+id/teacher"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/codeGroup"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="Codigo del grupo: sndsuhids"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/ButonClose"
                android:id="@+id/btnActionCloseGroup"
                android:text="Cerrar Grupo"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_width="200dp"
                app:icon="@drawable/ic_close"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>